@{
    ViewData["Title"] = "Upload File";
}

<h2>Upload File</h2>

<form asp-action="Upload" asp-controller="Person" method="post" enctype="multipart/form-data">
    <div>
        <label for="file">Chọn file:</label>
        <input type="file" name="file" />
    </div>
    <br />
    <button type="submit">Tải lên</button>
</form>